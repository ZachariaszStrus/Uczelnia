<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projekt2.CreateDirectoryController">
    <Label text="Choose directory :" layoutX="10" layoutY="10"/>
    <TextField fx:id="fileName"  layoutX="10" layoutY="30"/>
    <CheckBox fx:id="checkBox1" text="File" layoutX="10" layoutY="60" onAction="#checkBox1Handler" />
    <CheckBox fx:id="checkBox2" text="Directory" layoutX="10" layoutY="85" onAction="#checkBox2Handler" />
    <Button fx:id="submitButton" text="Create" layoutX="10" layoutY="110" onAction="#createFile" disable="true" />
</AnchorPane>
